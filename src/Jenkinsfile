pipeline {
    agent any
    environment {
        // Define el directorio donde se clonar√° el repositorio
        REPO_DIR = '/opt/proyectos'
        BUILD_DIR = "${REPO_DIR}/dist"
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Clonar el repositorio en /opt/proyectos si no existe
                    if (!fileExists(REPO_DIR)) {
                        sh "mkdir -p ${REPO_DIR}"
                        dir(REPO_DIR) {
                            git url: 'https://github.com/CoilBetrox/portafolio-rdtr.git'
                        }
                    } else {
                        dir(REPO_DIR) {
                            git pull
                        }
                    }
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                dir(REPO_DIR) {
                    sh 'npm install'
                }
            }
        }
        stage('Build') {
            steps {
                dir(REPO_DIR) {
                    sh 'npm run build'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Copiar los archivos construidos al directorio de Nginx
                    sh "sudo cp -r ${BUILD_DIR}/* /opt/proyectos/dist/"
                    // Reiniciar Nginx para aplicar cualquier cambio
                    sh 'sudo systemctl restart nginx'
                }
            }
        }
    }
    post {
        failure {
            mail to: 'roberthdanielt@gmail.com',
                 subject: "Build failed in Jenkins: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Build failed. Check console output for details."
        }
    }
}
