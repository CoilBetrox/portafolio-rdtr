pipeline {
    agent any
    environment {
        REPO_DIR = "${env.WORKSPACE}"
        BUILD_DIR = "${REPO_DIR}/dist"
        NODEJS_HOME = "${tool 'NodeJS 16'}"
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
        SUDO_PASS = credentials('ubuntu')
    }
    stages {
        stage('Install Dependencies') {
            steps {
                dir(REPO_DIR) {
                    sh 'npm install'
                }
            }
        }
        stage('Build') {
            steps {
                dir(REPO_DIR) {
                    sh 'npm run build'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh '''
                    echo $SUDO_PASS | sudo -S mkdir -p /opt/proyectos/dist
                    echo $SUDO_PASS | sudo -S cp -r ${BUILD_DIR}/* /opt/proyectos/dist/
                    echo $SUDO_PASS | sudo -S systemctl restart nginx
                    '''
                }
            }
        }
    }
}
